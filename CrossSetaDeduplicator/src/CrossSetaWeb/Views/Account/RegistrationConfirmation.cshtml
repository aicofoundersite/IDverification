@{
    ViewData["Title"] = "Registration Confirmation";
}

<div class="container mt-5 text-center">
    <div class="alert alert-success">
        <h4 class="alert-heading">Check your email!</h4>
        <p>We've sent a confirmation link to your email address.</p>
        <hr>
        <p class="mb-0">Please check your inbox (and spam folder) and click the link to verify your account.</p>
    </div>
    <a asp-action="Login" class="btn btn-primary mt-3">Back to Login</a>
</div>
